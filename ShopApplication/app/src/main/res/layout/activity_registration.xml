<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityRegistration" android:backgroundTint="#605E9C" android:background="#558B9C">

    <androidx.fragment.app.FragmentContainerView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:name="pl.edu.uj.wieliczko.shopapplication.fragments.RepeatPasswordFragment"
            android:id="@+id/RepeatPasswordRegisterContainer"
            app:layout_constraintStart_toStartOf="@+id/PasswordRegisterContainer"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/PasswordRegisterContainer"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:name="pl.edu.uj.wieliczko.shopapplication.fragments.InsertSurnameFragment"
            android:id="@+id/SurnameRegisterContainer"
            app:layout_constraintStart_toStartOf="@+id/NameRegisterContainer" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/NameRegisterContainer"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="250dp"
            android:layout_height="50dp" android:name="pl.edu.uj.wieliczko.shopapplication.fragments.InsertEmailFragment"
            android:id="@+id/EmailRegisterContainer"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/NicknameRegisterContainer"
            app:layout_constraintStart_toStartOf="@+id/NicknameRegisterContainer"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="250dp"
            android:layout_height="50dp" android:name="pl.edu.uj.wieliczko.shopapplication.fragments.InsertNameFragment"
            android:id="@+id/NameRegisterContainer"
            app:layout_constraintStart_toStartOf="@+id/EmailRegisterContainer"
            app:layout_constraintTop_toBottomOf="@+id/EmailRegisterContainer" android:layout_marginTop="10dp"
            />
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="250dp"
            android:layout_height="60dp" android:name="pl.edu.uj.wieliczko.shopapplication.fragments.ConfirmFragment"
            android:id="@+id/ConfirmRegisterContainer"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/RepeatPasswordRegisterContainer"
            app:layout_constraintStart_toStartOf="@+id/RepeatPasswordRegisterContainer"
            />
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:name="pl.edu.uj.wieliczko.shopapplication.fragments.InsertPasswordFragment"
            android:id="@+id/PasswordRegisterContainer"
            app:layout_constraintStart_toStartOf="@+id/SurnameRegisterContainer" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/SurnameRegisterContainer"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:name="pl.edu.uj.wieliczko.shopapplication.fragments.InsertNicknameFragment"
            android:id="@+id/NicknameRegisterContainer"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="70dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/BackRegisterContainer"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="120dp"
            android:layout_height="45dp" android:name="pl.edu.uj.wieliczko.shopapplication.fragments.BackButtonFragment"
            android:id="@+id/BackRegisterContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:name="pl.edu.uj.wieliczko.shopapplication.fragments.ConfirmAndLoginFragment"
            android:id="@+id/ConfirmAndLoginRegisterContainer"
            app:layout_constraintStart_toStartOf="@+id/ConfirmRegisterContainer"
            app:layout_constraintTop_toBottomOf="@+id/ConfirmRegisterContainer" android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>