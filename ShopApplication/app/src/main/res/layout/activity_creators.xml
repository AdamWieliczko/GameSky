<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityCreators" android:background="#558B9C" android:backgroundTint="#605E9C">

    <androidx.fragment.app.FragmentContainerView
            android:layout_width="120dp"
            android:layout_height="45dp" android:name="pl.edu.uj.wieliczko.shopapplication.fragments.BackButtonFragment"
            android:id="@+id/BackCreatorsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="125dp"
            android:layout_height="125dp" android:name="pl.edu.uj.wieliczko.shopapplication.fragments.CreatorPhotoFragment"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="134dp"
            android:layout_marginTop="145dp" app:layout_constraintTop_toBottomOf="@+id/BackCreatorsContainer"
            android:id="@+id/fragmentContainerView8"
    />
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="pl.edu.uj.wieliczko.shopapplication.fragments.CreatorsDescriptionFragment"
            android:id="@+id/CreatorsDescriptionContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentContainerView8" android:layout_marginTop="30dp"
            android:layout_marginStart="120dp"/>
    <Button
        android:text="@string/donate"
        android:layout_width="193dp"
        android:layout_height="70dp"
        android:onClick="donate"
        android:id="@+id/donateButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="550dp"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="193dp"
            android:layout_height="70dp"
            android:name="pl.edu.uj.wieliczko.shopapplication.fragments.SendErrorInfoButtonFragment"
            android:id="@+id/fragmentContainerView9"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="450dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>